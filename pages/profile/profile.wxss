/* pages/profile/profile.wxss */
page{
  background: #f1f1f1;
}
.avatar{
  background-color: #f60;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}
.avatar image{
  width: 200rpx;
  height: 200rpx;
  border:10rpx solid rgba(0,0,0,.1);
  border-radius: 50%;
}

.cell{
  font-size: 16px;
  background: #fff;
}
.cell-item{
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}